{
  "name": "post-stack",
  "version": "1.0.0",
  "description": "A blog backend API with authentication and markdown blog posts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:debug": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:push:dev": "cross-env NODE_ENV=development prisma db push",
    "db:push:test": "cross-env NODE_ENV=test prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:dev": "cross-env NODE_ENV=development prisma migrate dev",
    "db:migrate:test": "cross-env NODE_ENV=test prisma migrate dev",
    "db:studio": "prisma studio",
    "db:studio:dev": "cross-env NODE_ENV=development prisma studio",
    "db:studio:test": "cross-env NODE_ENV=test prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "setup:test": "npm run docker:up && npm run db:generate"
  },
  "keywords": [
    "blog",
    "api",
    "express",
    "typescript",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "image-size": "^2.0.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/form-data": "^2.5.2",
    "@types/image-size": "^0.8.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.11.18",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "form-data": "^4.0.4",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.8.4"
  }
}
